<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="16dp"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_adpater_Title"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/vienimg" />

    <TextView
        android:id="@+id/tvadapterCauhoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/img_adpater_Title"
        android:layout_toRightOf="@+id/img_adpater_Title"
        android:text="ai cho toi tinh yeu ?"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvadapterTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvadapterCauhoi"
        android:layout_toRightOf="@+id/img_adpater_Title"
        android:text="20/10/2017" />


</RelativeLayout>