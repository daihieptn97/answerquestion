<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvAdapterUseName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:padding="10dp"
        android:text="UserName"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvadapterCauhoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ai cho toi tdsadsadsadsainh yeu ?"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvadapterTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20/10/2017" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_adpater_Title"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/vienimg"
        android:src="@color/N_answer" />


</LinearLayout>